<?xml version="1.0" encoding="utf-8" ?>

<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:MauiApp1.Pages"
            x:Class="MauiApp1.Pages.MainPage">

    <!-- ================== INICIO ================== -->
    <NavigationPage Title="Inicio">

        <x:Arguments>

            <ContentPage Title="Inicio">

                <VerticalStackLayout
                    Padding="50,0"
                    Spacing="25"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">

                    <Label
                        Text="Bienvenido al sitio oficial de"
                        HorizontalOptions="Center"/>

                    <Label
                        Text="Lana Del Rey"
                        FontSize="32"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"/>

                    <Image
                        Source="ldr.png"
                        Aspect="AspectFit"
                        HeightRequest="250"
                        WidthRequest="250"
                        HorizontalOptions="Center"/>

                </VerticalStackLayout>

            </ContentPage>

        </x:Arguments>

    </NavigationPage>


    <!-- ================== BIOGRAFÍA ================== -->
    <NavigationPage Title="Biografía">

        <x:Arguments>
            <local:BioPage/>
        </x:Arguments>

    </NavigationPage>


    <!-- ================== CONTADOR ================== -->
    <NavigationPage Title="Contador">

        <x:Arguments>

            <ContentPage Title="Contador">

                <ScrollView>

                    <VerticalStackLayout
                        Padding="30,0"
                        Spacing="25">

                        <Image
                            Source="dotnet_bot.png"
                            HeightRequest="185"
                            Aspect="AspectFit"/>

                        <Label
                            Text="Hello, World!"
                            FontSize="24"
                            FontAttributes="Bold"/>

                        <Label
                            Text="Welcome to .NET MAUI"
                            FontSize="16"/>

                        <Button
                            x:Name="CounterBtn"
                            Text="Click me"
                            Clicked="OnCounterClicked"
                            HorizontalOptions="Fill"/>

                    </VerticalStackLayout>

                </ScrollView>

            </ContentPage>

        </x:Arguments>

    </NavigationPage>

</TabbedPage>
