<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.DiscPage"
             Title="DiscPage">


    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{DynamicResource BackgroundMain}" Offset="0.0"/>
            <GradientStop Color="{DynamicResource BackgroundSecond}" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>


    

    <VerticalStackLayout>
        <Label 
            Text="DiscografÃ­a"
            Style="{StaticResource Subtitle}"
            HorizontalOptions="Center"
            Margin="0,10"/>

        <ListView x:Name="discList" ItemSelected="OnContactSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Spacing="10" Padding="5">

                            
                            <Image Source="{Binding Url}"
                           WidthRequest="60"
                           HeightRequest="60"/>

                            
                            <VerticalStackLayout VerticalOptions="Center">


                                
                                <Label Text="{Binding SongN}"
                                       Style="{StaticResource Disc}"/>

                            </VerticalStackLayout>

                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>