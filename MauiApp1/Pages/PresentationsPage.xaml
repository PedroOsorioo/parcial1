<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.PresentationsPage"
             Title="PresentationsPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Yellow" Offset="0.0"/>
            <GradientStop Color="BlueViolet" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,Auto,*">


        <Label 
        Grid.Row="0"
        Text="Eventos y Presentaciones"
        FontSize="24"
        FontAttributes="Bold"
        TextColor="White"
        HorizontalOptions="Center"
        Margin="0,10"/>


        <ListView 
        Grid.Row="1"
        x:Name="presentationsList" 
        ItemSelected="OnContactSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Spacing="10" Padding="5">
                            <VerticalStackLayout VerticalOptions="Center">
                                <Label Text="{Binding Name}"
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="#333"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <Label 
        Grid.Row="2"
        Text="MÃS EVENTOS PROXIMAMENTE..."
        FontSize="18"
        FontAttributes="Bold"
        TextColor="Red"
        HorizontalOptions="Center"
        VerticalOptions="Center"/>

    </Grid>




</ContentPage>