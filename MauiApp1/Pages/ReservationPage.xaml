<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.ReservationPage"
             Title="ReservationPage">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="OrangeRed" Offset="0.0"/>
            <GradientStop Color="YellowGreen" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15" Padding="20">

        <Image Source="https://i.pinimg.com/originals/e6/9a/ca/e69acae1176c249d95dcea23f85381c9.jpg" WidthRequest="150" HeightRequest="150" Aspect="AspectFit"/>

        <Label 
            Text="NO HAY RESERVAS POR EL MOMENTO"
            FontSize="18"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>