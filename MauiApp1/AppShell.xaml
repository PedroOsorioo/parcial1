<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    xmlns:pages="clr-namespace:MauiApp1.Pages"
    Title="MauiApp1">

    <TabBar>

        <Tab Route="MainPage" Title="Página Principal" Icon="dotnet_bot.png">

            <ShellContent Title="Página Principal"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage"/>
        </Tab>

        <Tab Route="BioPage" Title="Página Biográfica" Icon="dotnet_bot.png">

            <ShellContent Title="Página Biográfica"
            ContentTemplate="{DataTemplate pages:BioPage}"
            Route="BioPage"/>
        </Tab>

        <Tab Route="DiscPage" Title="Discografía" Icon="dotnet_bot.png">

            <ShellContent Title="Discografía"
            ContentTemplate="{DataTemplate pages:DiscPage}"
            Route="DiscPage"/>
        </Tab>

        <Tab Route="PresentationsPage" Title="Presentaciones" Icon="dotnet_bot.png">

            <ShellContent Title="Presentaciones"
            ContentTemplate="{DataTemplate pages:PresentationsPage}"
            Route="PresentationsPage"/>
        </Tab>

    </TabBar>
    
    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:PresentationsPage}"
        Route="MainPage" />-->

</Shell>
